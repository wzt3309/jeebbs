<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.bbs.entity">
	<class
		name="BbsForum"
		table="BBS_FORUM"
		>
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Integer"
			column="FORUM_ID"
			>
			<generator class="native"/>
		</id>

		<property
			name="path"
			column="PATH"
			type="string"
			not-null="true"
			length="20"
			/>
		<property
			name="title"
			column="TITLE"
			type="string"
			not-null="true"
			length="150"
			/>
		<property
			name="description"
			column="DESCRIPTION"
			type="string"
			not-null="false"
			length="255"
			/>
		<property
			name="keywords"
			column="KEYWORDS"
			type="string"
			not-null="false"
			length="255"
			/>
		<property
			name="forumRule"
			column="FORUM_RULE"
			type="string"
			not-null="false"
			length="255"
			/>
		<property
			name="topicLockLimit"
			column="TOPIC_LOCK_LIMIT"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="priority"
			column="PRIORITY"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="topicTotal"
			column="TOPIC_TOTAL"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="postTotal"
			column="POST_TOTAL"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="postToday"
			column="POST_TODAY"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="outerUrl"
			column="OUTER_URL"
			type="string"
			not-null="false"
			length="255"
			/>
		<property
			name="pointTopic"
			column="POINT_TOPIC"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="pointReply"
			column="POINT_REPLY"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="pointPrime"
			column="POINT_PRIME"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="prestigeTopic"
			column="PRESTIGE_TOPIC"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="prestigeReply"
			column="PRESTIGE_REPLY"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="prestigePrime0"
			column="PRESTIGE_PRIME0"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="prestigePrime1"
			column="PRESTIGE_PRIME1"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="prestigePrime2"
			column="PRESTIGE_PRIME2"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="prestigePrime3"
			column="PRESTIGE_PRIME3"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property name="pointAvailable" column="POINT_AVAILABLE" type="java.lang.Boolean" not-null="true"/>
		<property name="prestigeAvailable" column="PRESTIGE_AVAILABLE" type="java.lang.Boolean" not-null="true"/>
		<property
			name="lastTime"
			column="LAST_TIME"
			type="timestamp"
			not-null="false"
			/>
		<property
			name="moderators"
			column="moderators"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="groupViews"
			column="group_views"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="groupTopics"
			column="group_topics"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="groupReplies"
			column="group_replies"
			type="string"
			not-null="false"
			length="100"
		/>
		<many-to-one
			name="lastPost"
			column="POST_ID"
			class="BbsPost"
			not-null="false"
			>
		</many-to-one>
		<many-to-one
			name="lastReply"
			column="replyer_id"
			class="BbsUser"
			not-null="false"
			>
		</many-to-one>
		<many-to-one
			name="category"
			column="CATEGORY_ID"
			class="BbsCategory"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="site"
			column="site_id"
			class="com.jeecms.core.entity.CmsSite"
			not-null="true"
			>
		</many-to-one>
		<set name="postTypes" inverse="true" cascade="all">
			<key column="FORUM_ID"/>
			<one-to-many class="BbsPostType"/>
		</set>
	</class>
</hibernate-mapping>